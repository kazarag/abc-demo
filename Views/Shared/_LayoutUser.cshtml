<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <style type="text/css">
        .imgbook {
            transition: all 1s ease-in;
            width: 400px;
        }

            .imgbook:hover {
                transform: scale(0.9);
                cursor: pointer;
            }

        .imgsachbannhieu {
            width: 100px;
        }
    </style>
</head>

<body>

    @Html.Action("NavbarnavbarPartial","SachOnline")
    <br>
    @Html.Action("SliderPartial","SachOnline")

    <!-- Phần thân trang -->
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                <!--CHỦ ĐỀ và NHÀ XUẤT BẢN-->
                @Html.Action("ChudePartial","SachOnline")

                <br>
                @Html.Action("NhaxuatbanPartial", "SachOnline")
            </div>

            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                @RenderBody()

            </div>

        </div>
        <hr>
    </div>
    @Html.Action("SachbannhieuPartial", "SachOnline")
    <!-- /.container-->
    <!-- Cuối trang -->
    @Html.Action("FooterPartial", "SachOnline")
</body>
</html>
